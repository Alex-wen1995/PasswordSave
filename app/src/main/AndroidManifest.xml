<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.passwordsave">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!--后端云 -->
    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".module.ad.AdActivity" android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".module.net_account.AddAccountActivity" android:screenOrientation="portrait" />
        <activity android:name=".module.net_account.UpdateAccountActivity" android:screenOrientation="portrait" />
        <activity android:name=".module.main.MainActivity" android:launchMode="singleTask" android:screenOrientation="portrait"  android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity android:name=".module.main.Term2Activity" />
        <activity android:name=".module.main.Term1Activity" />
        <activity android:name=".module.setting.pattern_lock.PatternSettingActivity" />
        <activity android:name=".module.setting.about.AboutActivity" />
        <activity android:name=".module.setting.pattern_lock.WholePatternSettingActivity" />
        <activity android:name=".module.setting.pattern_lock.WholePatternCheckingActivity" />
        <activity android:name=".module.setting.pattern_lock.WholePatternCancelActivity" />
        <activity android:name=".module.login.LoginActivity" />
        <activity android:name=".module.login.RegisterActivity" />
        <activity android:name=".module.local_account.UpdateAccountActivity2" />
        <activity android:name=".module.local_account.AddAccountActivity2" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.passwordsave.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="com.passwordsave.BmobContentProvider">
        </provider>

    </application>

</manifest>